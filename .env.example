# Azure SQL Server Configuration
AZURE_SQL_SERVER=your-server-name.database.windows.net
AZURE_SQL_DATABASE=your-database-name
AZURE_SQL_USERNAME=your-username
AZURE_SQL_PASSWORD=your-password

# PostgreSQL Configuration (if using local PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname
PGHOST=localhost
PGPORT=5432
PGUSER=user
PGPASSWORD=password
PGDATABASE=dbname

# Replit Environment Variables (for local development)
REPLIT_DOMAINS=localhost:5173,127.0.0.1:5173
REPL_ID=local-dev-repl
ISSUER_URL=https://replit.com/oidc

# Session Configuration
SESSION_SECRET=your-session-secret-key-here

# OpenAI API Key (optional)
OPENAI_API_KEY=your-openai-api-key

# Development Mode
NODE_ENV=development